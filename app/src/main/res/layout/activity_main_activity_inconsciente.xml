<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vigion.suportebasicodevida1.MainActivityInconsciente"
    android:background="#ffc2c2c2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="112"
        android:id="@+id/BtnLigarSOS"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar ao inicio"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnInicioOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Olhe para dentro da boca da vítima e verifique a existência de objectos estranhos (prótese dentária, pastilha elástica, etc) e se for possivel retire"
        android:id="@+id/textViewPassoUmInconsciente"
        android:textSize="25dp"
        android:layout_below="@+id/BtnLigarSOS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passo 2"
        android:id="@+id/buttonPassoDois"
        android:layout_below="@+id/textViewPassoUmInconsciente"
        android:layout_alignRight="@+id/textViewPassoUmInconsciente"
        android:layout_alignEnd="@+id/textViewPassoUmInconsciente"
        android:onClick="buttonPassoDoisOnClick" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_below="@+id/buttonPassoDois"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/hg"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/buttonPassoDois"
        android:layout_alignEnd="@+id/buttonPassoDois" />

</RelativeLayout>
